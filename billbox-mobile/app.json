{
  "expo": {
    "name": "billbox-mobile",
    "slug": "billbox-mobile",
    "scheme": "billbox",
    "version": "1.0.54",
    "orientation": "portrait",
    "icon": "./assets/logo/logo-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/logo/logo-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true,
      "url": "https://u.expo.dev/b201d860-e579-4734-acf9-71594e8d0054"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anaplus.billboxmobile",
      "buildNumber": "176",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes and capture invoice photos for OCR.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select invoice images for OCR.",
        "NSUserNotificationUsageDescription": "BillBox schedules local notifications to remind you of upcoming bills and planned payments."
      }
    },
    "android": {
      "package": "com.anaplus.billboxmobile",
      "versionCode": 177,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/logo-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": false,
          "data": [
            {
              "scheme": "billbox",
              "host": "import"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "content",
              "mimeType": "application/pdf"
            },
            {
              "scheme": "file",
              "mimeType": "application/pdf"
            },
            {
              "scheme": "content",
              "mimeType": "image/*"
            },
            {
              "scheme": "file",
              "mimeType": "image/*"
            }
          ],
          "category": [
            "DEFAULT"
          ]
        },
        {
          "action": "SEND",
          "data": [
            {
              "mimeType": "application/pdf"
            },
            {
              "mimeType": "image/*"
            }
          ],
          "category": [
            "DEFAULT"
          ]
        },
        {
          "action": "SEND_MULTIPLE",
          "data": [
            {
              "mimeType": "application/pdf"
            },
            {
              "mimeType": "image/*"
            }
          ],
          "category": [
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-community/datetimepicker",
      "expo-font",
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "b201d860-e579-4734-acf9-71594e8d0054"
      },
      "commitHash": "5c0b988"
    }
  }
}
