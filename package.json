{
  "name": "billbox-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "dev": "npm --workspace apps/web run dev",
    "build": "npm --workspace apps/web run build",
    "lint": "eslint .",
    "preview": "npm --workspace apps/web run preview",
    "mobile:start": "npm --prefix billbox-mobile run start",
    "mobile:tunnel": "npm --prefix billbox-mobile run start -- --tunnel"
  },
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/shared"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@zxing/browser": "^0.1.5",
    "chart.js": "^4.5.1",
    "google-auth-library": "^9.0.0",
    "jspdf": "^2.5.2",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "eas-cli": "^10.0.0"
  }
